@model MercadoIGL.Models.Venda

@{
    ViewData["Title"] = "Create";
}

<h4>Venda</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="idProduto" class="control-label"></label>
                <select asp-for="idProduto" class ="form-control" asp-items="ViewBag.idProduto"></select>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="idCliente" class="control-label"></label>
                <select asp-for="idCliente" class ="form-control" asp-items="ViewBag.idCliente"></select>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="idFuncionario" class="control-label"></label>
                <select asp-for="idFuncionario" class ="form-control" asp-items="ViewBag.idFuncionario"></select>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="quantidade" class="control-label"></label>
                <input asp-for="quantidade" class="form-control" />
                <span asp-validation-for="quantidade" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="valorTotal" class="control-label"></label>
                <input asp-for="valorTotal" class="form-control" />
                <span asp-validation-for="valorTotal" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="data" class="control-label"></label>
                <input asp-for="data" class="form-control" />
                <span asp-validation-for="data" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
            <br />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

