@model IEnumerable<MercadoIGL.Models.Funcionario>

@{
    ViewData["Title"] = "Index";
}

<h1>Tabela de Funcionarios</h1>

<p class="fs-1">
    <a asp-action="Create"><i class="bi bi-plus-circle"></i></a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cargo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cargo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idFuncionario"><i class="bi bi-hammer"></i></a> |
                <a asp-action="Details" asp-route-id="@item.idFuncionario"><i class="bi bi-body-text"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.idFuncionario"><i class="bi bi-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
